<% if user_signed_in? %>
  <table class = "table table-striped table-bordered table-hover">
    <thead class = "thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>X</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td> <%= link_to friend.first_name + friend.last_name , friend , style: "text-decoration:none; color:inherit;" %> </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.x %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Hellow world!</h1>
  This is my first rails webpage....
<% end %>
